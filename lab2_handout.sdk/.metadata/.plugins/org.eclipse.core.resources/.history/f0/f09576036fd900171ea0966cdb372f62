 }

 void drawTreeL(int x, int y){
	setFont(BigFont);
	setColorBg(sideColor[0], sideColor[1], sideColor[2]);
	setColor(244, 110, 65);
	fillRect(x,y,x+5,y+30);
	setColor(0, 153, 0);
	lcdPrint("@", x-13, y-8);
	lcdPrint("@", x-8,  y-8);
	lcdPrint("@", x+2,  y-8);
	lcdPrint("@", x-8, y-12);
	lcdPrint("@", x-3, y-12);
 }
 void drawTreeR(int x, int y){
	setFont(BigFont);
	setColorBg(sideColor[0], sideColor[1], sideColor[2]);
	setColor(244, 110, 65);
	fillRect(x,y,x+25,y+5);
	setColor(0, 153, 0);
	lcdPrint("@", x+21, y-13);
	lcdPrint("@", x+21, y-8);
	lcdPrint("@", x+21, y+2);
	lcdPrint("@", x+26, y-8);
	lcdPrint("@", x+26, y-3);
 }
